{% verbatim %}
<div class="modal-header">
    <h3 class="modal-title">Block/Widget</h3>
</div>
<div class="modal-body">
    <form role="form">
        <div class="form-group">
            <label>Type</label>
            <select ng-model="$parent.childType" class="form-control" ng-options="type for type in childTypes"></select>
        </div>
        <div class="form-group" ng-show="childType == 'widget'">
            <label>Widgettype</label>
            <select ng-model="$parent.widgetType" class="form-control" ng-options="type.name for type in widgetTypes">
            </select>
        </div>
        <div class="form-group" ng-show="childType == 'block'">
            <label>Name</label>
            <input type="text" ng-model="$parent.blockName" class="form-control">
        </div>

    </form>
</div>
<div class="modal-footer">
    <button class="btn btn-primary" ng-click="ok()">OK</button>
    <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
</div>
{% endverbatim %}
