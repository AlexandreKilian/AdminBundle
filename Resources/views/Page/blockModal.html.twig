{% verbatim %}
<div class="modal-header">
    <h3 class="modal-title">Block/Widget</h3>
</div>
<div class="modal-body">
    <form role="form">
        <!--<div class="form-group">
            <label>Type</label>
            <select ng-model="$parent.childType" class="form-control" ng-options="type for type in childTypes"></select>
        </div>-->
        <div class="form-group">
            <label>Widgettype</label>
            <select ng-model="data.widgetType" class="form-control" ng-options="type.name for type in widgetTypes">
            </select>
        </div>
         <div class="form-group" ng-show="data.childType == 'block'">
            <label>Name</label>
            <input type="text" ng-model="$parent.blockName" class="form-control">
        </div>
        <div class="form-group" ng-show="data.childType == 'widget' && data.widgetType">
           <label>Entity</label>
           <select ng-model="data.entity" class="form-control" ng-options="entity.name for entity in entitites">
           </select>
       </div>


    </form>
</div>
<div class="modal-footer">
    <button class="btn btn-primary" ng-click="ok()">OK</button>
    <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
</div>
{% endverbatim %}
