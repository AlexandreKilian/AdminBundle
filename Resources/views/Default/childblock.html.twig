{% verbatim %}
<span>
    <div ng-class="{blockcontainer:!editMode,preview:previewMode}"><span ng-hide="editMode" class="blocklabel">{{block.name}}</span>
        <widget  ng-if="!block.type"  ng-repeat="element in block.children" widgetid="{{element.id}}" typeid="{{element.type.id}}" ></widget>
        <span ng-if="block.type" ng-include src="templateUrl()"></span>
        <div class="btn btn-success clearfix" ng-hide="previewMode || editMode" ng-click="addElement()">Add Element</div>
    </div>
</span>
{% endverbatim %}
